<?xml version="1.0" encoding="UTF-8"?>
<!-- exewrap must be on path; e.g. C:\Program Files\Java\jdk1.6.0_18\bin\exewrap.exe -->

<project name="RobotCalligraphy" default="runnable-jar" basedir=".">
	<import file="build-examples.xml"/>

	<!-- ****Properties**** -->

	<property name="app.name" value="calligraphy.RobotCalligraphy" />
	<property name="app.classes" value="calligraphy/*.class" />
	<property name="app.classpath" value="${phybots-jar.name} ${piccolo2d-list}" />

	<!-- ****Targets**** -->

	<!-- Runnable Jar to Zip -->
	<target name="runnable-jar-zip" depends="runnable-jar">
		<zip destfile="${phybots-dist.dir}${app.name}.zip">
			<fileset dir="${phybots-dist.dir}" includes="${app.name}.jar" />
			<zipfileset dir="./" file="README_app.txt" fullpath="README.txt" />
		</zip>
	</target>

	<!-- Runnable Jar -->
	<target name="runnable-jar" depends="phybots-examples-compile">
		<copy todir="${phybots-dist.dir}lib">
			<fileset dir="lib/piccolo/" includes="${piccolo2d-list}" />
		</copy>
		<jar destfile="${phybots-dist.dir}${app.name}.jar">
			<zipfileset src="lib/jar-in-jar-loader.zip" />
			<fileset dir="${phybots-examples-classes.dir}" includes="${app.classes}" />
			<fileset dir="${phybots-jar.dir}" includes="${app.classpath}" />
			<manifest>
				<attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader" />
				<attribute name="Class-Path" value="." />
				<attribute name="Rsrc-Main-Class" value="${app.name}" />
				<attribute name="Rsrc-Class-Path" value="./ ${app.classpath}" />
			</manifest>
		</jar>
	</target>

	<!-- Runnable Exe to Zip -->
	<target name="runnable-exe-zip" depends="runnable-exe">
		<zip destfile="${phybots-dist.dir}${app.name}-exe.zip">
			<fileset dir="${phybots-dist.dir}" includes="${app.name}.exe" />
			<zipfileset dir="${phybots-jar.dir}" prefix="lib" includes="${app.classpath}" />
			<zipfileset dir="./" file="README_app.txt" fullpath="README.txt" />
		</zip>
	</target>

	<!-- Runnable Exe -->
	<target name="runnable-exe" depends="runnable-jar">
		<jar destfile="${phybots-dist.dir}${app.name}_win.jar">
			<fileset dir="${phybots-examples-classes.dir}" includes="${app.classes}" />
			<manifest>
				<attribute name="Main-Class" value="${app.name}" />
			</manifest>
		</jar>
		<exec dir="${phybots-dist.dir}" executable="C:\Program Files (x86)\Java\jre6\bin\exewrap.exe">
		  <arg line="-g ${app.name}_win.jar"/>
		</exec>
		<move file="${phybots-dist.dir}${app.name}_win.exe" tofile="${phybots-dist.dir}${app.name}.exe" />
		<delete file="${phybots-dist.dir}${app.name}_win.jar" />
	</target>

	<!-- Clean -->
	<target name="runnable-clean" depends="phybots-examples-clean">
		<delete dir="${phybots-dist.dir}" />
	</target>
</project>